<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donate Blood"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_red"
                android:layout_marginBottom="24dp" />

            <!-- Blood Type -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_dark" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/light_bg">

                <AutoCompleteTextView
                    android:id="@+id/bloodTypeDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Select Blood Type"
                    android:inputType="text"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Units -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Units to Donate"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_dark" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/light_bg">

                <EditText
                    android:id="@+id/unitsInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter units (1-5)"
                    android:inputType="number"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Donation Center -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donation Center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_dark" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxBackgroundColor="@color/light_bg">

                <EditText
                    android:id="@+id/centerNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter center name"
                    android:inputType="text"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Donate Button -->
            <Button
                android:id="@+id/donateBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Submit Donation"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/primary_red"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Dark gradient at bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient_bottom_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>
