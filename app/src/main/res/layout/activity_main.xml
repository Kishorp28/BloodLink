<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Full-screen Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/carsoul"
        android:scaleType="centerCrop"
        android:contentDescription="Blood donation background" />

    <!-- Dark Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_full_overlay" />

    <!-- Content Over Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="28dp"
        android:paddingBottom="40dp">

        <!-- Heartbeat Icon with Pulse -->
        <TextView
            android:id="@+id/heartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="â¤ï¸"
            android:textSize="56sp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="BloodLink"
            android:textColor="#FFFFFFFF"
            android:textSize="42sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:lineSpacingExtra="4dp"
            android:text="Every heartbeat matters.\nBe someone's lifeline today."
            android:textAlignment="center"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:visibility="invisible" />

        <!-- Features Glass Cards -->
        <LinearLayout
            android:id="@+id/featuresSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/glass_card_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="ðŸ”"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="Find\nDonors"
                    android:textAlignment="center"
                    android:textColor="#E0FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/glass_card_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="ðŸ©¸"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="Blood\nInventory"
                    android:textAlignment="center"
                    android:textColor="#E0FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/glass_card_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="ðŸš¨"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="Emergency\nAlerts"
                    android:textAlignment="center"
                    android:textColor="#E0FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Get Started Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/getstarted"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:onClick="getstarted"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:backgroundTint="@color/primary_red"
            app:cornerRadius="16dp"
            app:elevation="8dp" />

        <!-- Bottom Message -->
        <TextView
            android:id="@+id/bottomMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="One donation can save up to 3 lives ðŸ¤"
            android:textColor="#99FFFFFF"
            android:textSize="13sp"
            android:visibility="invisible" />

    </LinearLayout>

</FrameLayout>
