<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_50">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/baseline_menu_24"
                app:title="Request Blood"
                app:titleCentered="true" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request Blood"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fill in the details to request blood units."
                        android:textSize="14sp"
                        android:textColor="@color/gray_700"/>
                </LinearLayout>

                <!-- Blood Group Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Blood Group"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:layout_marginBottom="12dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/btnA_plus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="4dp"
                        android:text="A+"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnA_minus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_margin="4dp"
                        android:text="A-"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnB_plus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_margin="4dp"
                        android:text="B+"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnB_minus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_margin="4dp"
                        android:text="B-"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnAB_plus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="4dp"
                        android:text="AB+"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnAB_minus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_margin="4dp"
                        android:text="AB-"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnO_plus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_margin="4dp"
                        android:text="O+"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnO_minus"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:layout_margin="4dp"
                        android:text="O-"
                        android:textSize="16sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </GridLayout>

                <!-- Units Required -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Units Required (ml)"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtUnits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/gray_900"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hospital Location -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hospital Location"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/gray_900"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Patient Name -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Patient Name"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPatientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/gray_900"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Urgency -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urgency"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp"
                    android:baselineAligned="false">

                    <Button
                        android:id="@+id/btnNormal"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Normal"
                        android:textSize="12sp"
                        android:backgroundTint="@color/primary_red"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button"/>

                    <Button
                        android:id="@+id/btnUrgent"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Urgent"
                        android:textSize="12sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <Button
                        android:id="@+id/btnImmediate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="Immediate"
                        android:textSize="11sp"
                        android:backgroundTint="@color/gray_200"
                        android:textColor="@color/gray_900"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmitRequest"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Submit Request"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/primary_red"
                    android:paddingVertical="12dp"
                    android:layout_marginBottom="24dp"/>

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/bottom_nav_bg"
            app:elevation="8dp"
            app:menu="@menu/bottom"
            app:itemIconTint="@color/bottom_nav_colors"
            app:itemTextColor="@color/bottom_nav_colors"
            app:itemActiveIndicatorStyle="@style/BottomNavIndicator"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
