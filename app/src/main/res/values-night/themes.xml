<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application dark theme. -->
    <style name="Base.Theme.Blood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_red_light</item>
        <item name="colorPrimaryContainer">@color/primary_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/gray_900</item>
        <item name="colorOnBackground">@color/white</item>
        
        <!-- Surface -->
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/gray_900</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <style name="Theme.Blood" parent="Base.Theme.Blood" />
    <style name="Theme.Blood.NoActionBar" parent="Base.Theme.Blood" />
</resources>