        android:supportsRtl="true"
        android:theme="@style/Theme.Blood">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:exported="true"/>
        <activity
            android:name=".Signup"
            android:exported="true"/>
        <activity
            android:name=".Dashboard"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".RequestBlood"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".BloodInventory"
            android:exported="true"/>
        <activity
            android:name=".DonationHistory"
            android:exported="true"
            android:launchMode="singleTop"/>
        <activity
            android:name=".Profile"
            android:exported="true"
            android:launchMode="singleTop"/>
        <activity
            android:name=".BloodInventoryActivity"
            android:exported="true"
            android:launchMode="singleTop"/>
        <activity
            android:name=".DonateActivity"
            android:exported="true"/>
        <activity
            android:name=".ProfileActivity"
            android:exported="true"/>
        <activity
            android:name=".EmergencyRequestActivity"
            android:exported="true"/>
        <activity
            android:name=".AdminSetupActivity"
            android:exported="true"/>
        <activity
            android:name=".TestFirebaseActivity"
            android:exported="true"/>
        <activity
            android:name=".NotificationsActivity"
            android:exported="true"/>
        <activity
            android:name=".LocationPickerActivity"
            android:exported="false"
            android:theme="@style/Theme.Blood.NoActionBar"/>
        <activity
            android:name=".BloodBanksMapActivity"
            android:exported="false"
            android:theme="@style/Theme.Blood.NoActionBar"/>
        <activity
            android:name=".AnalyticsActivity"
            android:exported="true"
            android:launchMode="singleTop"/>
    </application>

</manifest>